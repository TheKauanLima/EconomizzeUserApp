@page "/login"
@inject IUserLoginService UserLoginService
@inject IMapper Mapper
@inject SettingsService SettingsService
@inject NavigationManager NavigationManager
@inject StatusHandler StatusHandler

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h3 class="text-center mb-4">Login</h3>

                <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <!-- Email Field -->
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <InputText @bind-Value="loginModel.Username" class="form-control" placeholder="Email" />
                        </div>
                        <ValidationMessage For="@(() => loginModel.Username)" class="text-danger" />
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <InputText @bind-Value="loginModel.Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <ValidationMessage For="@(() => loginModel.Password)" class="text-danger" />
                    </div>

                    <!-- Login Button -->
                    <div class="d-flex justify-content-center mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>

                    <!-- Register and Forgot Password Buttons -->
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-link me-3" @onclick="GoToRegisterModule">Register New User</button>
                        <button type="button" class="btn btn-link" @onclick="GoToForgotPasswordModule">Forgot Password?</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</body>